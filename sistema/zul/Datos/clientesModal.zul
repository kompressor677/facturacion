<?page title="rolModal" contentType="text/html;charset=UTF-8"?>
<zk>
	<window title="Cliente Crear/Ver/Editar" border="normal"
		position="center,center" closable="true" mode="modal"
		action="show: slideDown;hide: slideUp">

		<vlayout>
		
			<tablelayout columns="2">
			
				<tablechildren>
					<label value="ID: " style="font-weight:bold" />
				</tablechildren>
			
				<tablechildren>
					
					<textbox value="@bind(vm.clienteSelected.clienteid)" readonly="true"
					width="150px" />					
				
				</tablechildren>
				
				<tablechildren>
					<label value="Nombre: " style="font-weight:bold" />
				</tablechildren>
			
				<tablechildren>
					
					<textbox value="@bind(vm.clienteSelected.nombre)" width="150px" />					
				
				</tablechildren>
				
				<tablechildren>
					<label value="Apellido: " style="font-weight:bold" />
				</tablechildren>
				
				<tablechildren>
					
					<textbox value="@bind(vm.clienteSelected.apellido)" width="150px" />					
				
				</tablechildren>
				
				<tablechildren>
					<label value="RUC: " style="font-weight:bold" />
				</tablechildren>
				
				<tablechildren>
					
					<textbox value="@bind(vm.clienteSelected.RUC)" width="150px" />					
				
				</tablechildren>
				
				<tablechildren>
					<label value="CI: " style="font-weight:bold" />
				</tablechildren>
				
				<tablechildren>
					
					<textbox value="@bind(vm.clienteSelected.CI)" width="150px" />					
				
				</tablechildren>
			
			</tablelayout>

			<space height="10px" />

			<hlayout>

				<button label="Aceptar" onClick="@command('guardar')" />

			</hlayout>

		</vlayout>


	</window>
</zk>