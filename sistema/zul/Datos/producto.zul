<?page title="CLientes" contentType="text/html;charset=UTF-8"?>
<zk>
	<window title="Producto" border="normal"
		viewModel="@id('vm') @init('com.facturacion.Datos.ProductoVM')"
		vflex="1" id="Body" apply="org.zkoss.bind.BindComposer">

		<hlayout vflex="1">
			

				<vlayout hflex="1" vflex="1">

					<hbox pack="end" hflex="1" >

						<button label="Agregar"
							iconSclass=" z-icon-plus" onClick="@command('modalProductosAgregar')" disabled="@load(!vm.opCrearProducto)" />

					</hbox>

					<listbox emptyMessage="lista vacÃ­a..." mold="paging" autopaging="true"
						vflex="1" model="@load(vm.lProductos)" checkmark="true">

						<listhead>

							<listheader hflex="min" align="center" />
							<listheader label="ID" align="right" hflex="min" />
							<listheader label="Producto" align="left" />
							<listheader label="Codigo de Barras" align="left" />
							<listheader label="Precio" align="left" />
							<listheader label="Marca" align="left" />
							<listheader align="center" hflex="min"/>


						</listhead>


			  	<auxhead> <!-- este es para iniciar la cabecera auxiliar -->



							<auxheader /> <!-- este no tiene informacion, es un auxheader en blanco -->
							<auxheader /> <!-- este es para el ID -->
							
							
							<auxheader>
								<textbox
									value="@bind(vm.filtroColumns[1])" instant="true"
									onChange="@command('filtrarProducto')" hflex="1" />
							</auxheader>
							
							<auxheader>
								<textbox
									value="@bind(vm.filtroColumns[2])" instant="true"
									onChange="@command('filtrarProducto')" hflex="1" />
							</auxheader>
							
							<auxheader>
								<textbox
									value="@bind(vm.filtroColumns[3])" instant="true"
									onChange="@command('filtrarProducto')" hflex="1" />
							</auxheader>
							
							<auxheader>
								<textbox
									value="@bind(vm.filtroColumns[4])" instant="true"
									onChange="@command('filtrarProducto')" hflex="1" />
							</auxheader>
							
							
							<auxheader />
							
							
					

				<auxheader />
							
						
							
							
				</auxhead>
						
						

						<template name="model">

							<listitem>
		
								<listcell />
								<listcell label="@load(each[0])" />
								<listcell label="@load(each[1])" />
								<listcell label="@load(each[2])" />
								<listcell label="@load(each[3])" />
								<listcell label="@load(each[4])" />
						
							
								
								<listcell>
									<hlayout>

										<button iconSclass="z-icon-edit"
											onClick="@command('modalProductos', productoid=each[0])"
											tooltiptext="Editar" disabled="@load(!vm.opEditarProducto)"/>
										<button
											iconSclass="z-icon-trash-o" style="background-color:red"
											onClick="@command('borrarProductoConfirmacion', productoid=each[0])"
											tooltiptext="Borrar" disabled="@load(!vm.opBorrarProducto)"/>


									</hlayout>


								</listcell>


							</listitem>


						</template>

						<listfoot>
							<listfooter span="4" align="left">
								<hlayout>
									<label
										value="@load(vm.lProductos.size())" />
									<label value="items" />
								</hlayout>
							</listfooter>
						</listfoot>


					</listbox>

				</vlayout>

			

		</hlayout>

	</window>

</zk>